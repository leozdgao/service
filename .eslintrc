---
  env:
    es6: true
    browser: true
    node: true

  ecmaFeatures:
    modules: true
    jsx: true
    experimentalObjectRestSpread: true

  rules:
    # Stylistic issue
    indent: [1, 2]
    array-bracket-spacing: [1, always]
    comma-spacing: 1
    key-spacing: 1
    object-curly-spacing: [1, always]
    semi: [1, never]

    # Best practice
    curly: [2,  multi-line]
    eqeqeq: 1
    no-loop-func: 2
    no-alert: 2
    yoda: [2, never]

    # ES6
    arrow-spacing : 2
    no-var: 2
    prefer-const: 2
    object-shorthand: 1
    constructor-super: 2
    no-this-before-super: 2
    generator-star-spacing: 2

    # Variables
    no-use-before-define: [2, nofunc]
